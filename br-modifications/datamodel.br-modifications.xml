        <!-- add role to lnkContactToFunctionalCI -->
        <class id="lnkContactToFunctionalCI" _delta="must_exist">
            <fields>
                <field id="role_id" xsi:type="AttributeExternalKey" _delta="define">
                    <sql>role_id</sql>
                    <target_class>ContactType</target_class>
                    <is_null_allowed>true</is_null_allowed>
                    <on_target_delete>DEL_MANUAL</on_target_delete>
                </field>
                <field id="role_name" xsi:type="AttributeExternalField" _delta="define">
                    <extkey_attcode>role_id</extkey_attcode>
                    <target_attcode>name</target_attcode>
                </field>
            </fields>
            <presentation>
                <details>
                    <items>
                        <item id="role_id" _delta="define">
                            <rank>30</rank>
                        </item>
                    </items>
                </details>
                <search>
                    <items>
                        <item id="role_id" _delta="define">
                            <rank>30</rank>
                        </item>
                    </items>
                </search>
                <list>
                    <items>
                        <item id="role_id" _delta="define">
                            <rank>30</rank>
                        </item>
                    </items>
                </list>
            </presentation>
        </class>

